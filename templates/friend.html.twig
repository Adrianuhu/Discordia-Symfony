
          


 {% if friends %}

                 {%for friend in friends %}
					

		{% if friend.status == 2 %}
                    
                  
                       
	
					<div onclick="loadFriendProfile({{friend.cod_user}})" class="person" method = "POST">
	
			
						<input name = "name_chat" type="hidden" value = '{{friend.nick}}'>
						<input name = "avatar_chat" type="hidden" value = "{{friend.photo}}">                        
						<button type="submit" class="person2">
							<img class="profPict" src="images/avatar/{{friend.photo}}"alt="image_user">
							<div class="friendName">{{friend.nick}}</div>
						</button>
	
					</div>
					
                    
 {%endif%}
                
				{% endfor %}
{% else %}

<p class='error'>You have no friends </p>
 {%endif%}
