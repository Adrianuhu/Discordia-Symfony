<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\User" table="user">
    <indexes>
      <index name="cod_user" columns="cod_user"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="nick" columns="nick"/>
      <unique-constraint name="mail" columns="mail"/>
    </unique-constraints>
    <id name="codUser" type="integer" column="cod_user">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="surname" type="string" column="surname" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nick" type="string" column="nick" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mail" type="string" column="mail" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="photo" type="string" column="photo" length="300" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="passwordHash" type="string" column="password_hash" length="80" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="250" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="gender" type="string" column="gender" length="6" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rol" type="boolean" column="rol" nullable="false"/>
    <many-to-many field="userb" target-entity="User" inversed-by="usera" fetch="LAZY">
      <join-table name="friend">
        <join-columns>
          <join-column name="userA" referenced-column-name="cod_user"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="userB" referenced-column-name="cod_user"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="codRoom" target-entity="Room" inversed-by="codUser" fetch="LAZY">
      <join-table name="user_room">
        <join-columns>
          <join-column name="cod_user" referenced-column-name="cod_user"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="cod_room" referenced-column-name="cod_room"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
